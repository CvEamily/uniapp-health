.bg {
  display: table-cell;
  vertical-align: middle;
  width: 800rpx;
  height: 1206rpx;
  background-color: #ebedee;
}
.bg .content {
  width: 800rpx;
  height: 600rpx;
  text-align: center;
}
.bg .content ._div {
  display: flex;
  justify-content: center;
  align-item: center;
  flex-direction: column;
  top: -200rpx;
  left: 0;
  width: 800rpx;
  height: 150rpx;
  font-size: 40rpx;
  font-weight: 700;
}
.bg .content form {
  display: flex;
  justify-content: center;
  align-item: center;
  flex-direction: column;
  top: -200rpx;
  left: 0;
}
.bg .content form input {
  width: 600rpx;
  height: 90rpx;
  font-size: 20;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-left: 40rpx;
  border-radius: 50rpx;
  background-color: #f2f2f2;
}
.bg .content form .placeholderClass {
  color: #c2c6df;
  font-size: 25rpx;
  font-weight: 700;
  text-align: left;
}
.bg .content form button {
  width: 240rpx;
  height: 80rpx;
  font-size: 35rpx;
  text-align: center;
  line-height: 80rpx;
  color: #827ffe;
}
.bg .content form .send {
  width: 180rpx;
  height: 80rpx;
  color: white;
  font-size: 25rpx;
  font-weight: 700;
  margin-top: 60rpx;
  background-color: #827ffe;
  border-radius: 100rpx;
}
.bg .content form .send .icon {
  margin-right: 10rpx;
  font-weight: 400;
}
.bg .forget {
  position: absolute;
  top: 920rpx;
  left: 450rpx;
  width: 300rpx;
