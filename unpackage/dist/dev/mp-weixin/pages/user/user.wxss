.bg {
  height: 1180rpx;
  padding-top: 50rpx;
  text-align: center;
}
.bg .uniIcon {
  position: relative;
  top: 0rpx;
  left: 630rpx;
  width: 90rpx;
  height: 80rpx;
}
.bg .user {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin-left: 300rpx;
  border: 5rpx solid #d3d8d2;
  border-radius: 150rpx;
  background-color: palegoldenrod;
}
.bg .user image {
  height: 100%;
  width: 100%;
}
.bg .userName {
  height: 150rpx;
  font-size: 40rpx;
  font-weight: 500;
}
.bg .box {
  display: flex;
  flex-wrap: wrap;
  width: 900rpx;
  padding-left: 38rpx;
}
.bg .box .littleBox {
  width: 300rpx;
  height: 300rpx;
  margin-left: 25rpx;
  margin-bottom: 25rpx;
  padding-top: 70rpx;
  text-align: center;
  border-radius: 20rpx;
  border: 1rpx solid black;
}
.bg .box .littleBox .icon {
  padding-bottom: 40rpx;
}
.bg .login {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-top: 100rpx;
  margin-left: 80rpx;
  border: 1rpx solid black;
  border-radius: 15rpx;
}

